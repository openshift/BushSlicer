add_storage_in_dropdown:
  action: click_resource_action_button
  action: operate_action_from_dropdown
  action: attach_storage
  action: submit_changes
attach_storage:
  elements:
  - selector:
      xpath: //button[@id="claimName"]
    op: click
  - selector:
      xpath: //span[text()="<pvc_name>"]
    op: click
  - selector:
      id: mount-path
    type: input
    op: send_keys <mount_path>

